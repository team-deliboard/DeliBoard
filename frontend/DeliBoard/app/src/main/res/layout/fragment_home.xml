    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#5E412F"
        app:layout_constraintTop_toBottomOf="@id/toBeverage"
        app:layout_constraintEnd_toStartOf="@id/buttonBox"
        app:layout_constraintStart_toEndOf="@+id/homeTutorialButton"
        app:layout_constraintBottom_toBottomOf="parent">

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title3"/>

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="딜리보드 역삼점"
            android:textColor="@color/white"
            android:fontFamily="@font/jua"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space3"
            app:layout_constraintBottom_toTopOf="@id/subtitle3"/>

        <TextView
            android:id="@+id/subtitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6주 연속 최우수 매장!"
            android:textColor="#F6EDD2"
            android:fontFamily="@font/jua"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title3"
            app:layout_constraintBottom_toTopOf="@id/homeVideo"/>

        <VideoView
            android:id="@+id/homeVideo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintDimensionRatio="10:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle3"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button 4 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeTutorialButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#5E412F"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/videoSpace"
        app:layout_constraintBottom_toBottomOf="parent">

        <Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title4"/>

        <TextView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장 안내"
            android:textColor="@color/white"
            android:fontFamily="@font/jua"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space4"
            app:layout_constraintBottom_toTopOf="@id/subtitle4"/>

        <TextView
            android:id="@+id/subtitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처음오신 분을 위한 안내"
            android:textColor="#F6EDD2"
            android:fontFamily="@font/jua"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title4"
            app:layout_constraintBottom_toTopOf="@id/image4"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="8:10"
            android:src="@drawable/ipad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle4"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


        <!--       버튼 상자-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/videoSpace"
        app:layout_constraintTop_toBottomOf="@+id/homeLogo">

        <!-- Button 6 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FCEBB6"
            app:layout_constraintBottom_toTopOf="@id/button7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:id="@+id/space6"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/bill_brown"
                app:layout_constraintStart_toEndOf="@id/space6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문내역"
                android:textColor="#523829"
                android:fontFamily="@font/jua"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subtitle6"/>

            <TextView
                android:id="@+id/subtitle6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음료, 보드게임 주문 보기"
                android:textColor="#523829"
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image6"
                app:layout_constraintTop_toBottomOf="@id/title6"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        button7-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FCEBB6"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6">

            <Space
                android:id="@+id/space7"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logout"
                app:layout_constraintStart_toEndOf="@id/space7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용종료"
                android:textColor="#523829"
                android:fontFamily="@font/jua"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subtitle7"/>

            <TextView
                android:id="@+id/subtitle7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방문해 주셔서 감사합니다."
                android:textColor="#523829"
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image7"
                app:layout_constraintTop_toBottomOf="@id/title7"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/one_dice"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/toBeverage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>