<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    tools:context=".beverage.cart.Cart">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cartLogo"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:paddingTop="35dp"
        android:background="@drawable/brown_box_rad"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/shopping_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cartText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Cart" />

        <View
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/Cart"
            app:layout_constraintBottom_toTopOf="@id/cartText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더 담기"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/Cart"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/jua"
            android:id="@+id/cartText">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/cartLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartDeleteButton"
        app:layout_constraintBottom_toTopOf="@id/cartPrice"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/cartDeleteButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:fontFamily="@font/jua"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="비우기"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:background="@drawable/brown_box_rad"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/orderButton"
        android:text="원"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/orderButton"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:fontFamily="@font/jua"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="주문하기"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:background="@drawable/begiebox_rad"
        android:textSize="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>